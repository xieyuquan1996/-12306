.date-picker
  .header
    display: flex
    width: 100%
    background rgb(59, 153, 252)
    font-size 0
    padding-left: 10px
    .icon-back,.title
      display inline-block
      height 40px
      line-height 40px
      font-weight: 500
      color: rgb(255, 255, 255)
      font-size 17px
    .icon-back
      font-size 15px
      width 5%
      vertical-align top
    .title
      width 95%
      justify-items center
      text-align center
  .week-wrapper
    display flex
    justify-content:space-between;
    text-align center
    width: 100%
    margin-bottom 20px
    padding-top: 5px
    padding-bottom 5px
    background rgb(97, 170, 245)
    .week-content
      width: 14.2%
      color: rgb(255, 255, 255)
      font-size 10px
  .date-wrapper
    position: relative;
    buttom 0
    width: 100%
    .date-title
      display flex
      justify-content:center;
    .date-content
      display flex
      flex-wrap: wrap;
      width: 100%
      .date
        position: relative;
        width: 14.2%
        .text-content
          position relative
          width 100%
          height 0
          padding-top 100%
          .back
            background rgb(97, 170, 245)
          .text
            display flex
            justify-content center
            align-items center
            position absolute
            top: 0
            left: 0
            width: 100%
            height: 100%
            font-size 13px
            color #000
