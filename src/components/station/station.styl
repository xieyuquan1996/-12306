@import "../../common/stylus/mixin.styl"
.station
  .header
    display: flex
    width: 100%
    background rgb(59, 153, 252)
    font-size 0
    .icon-back,.title
      display inline-block
      height 40px
      line-height 40px
      font-weight: 500
      color: rgb(255, 255, 255)
      font-size 17px
    .icon-back
      width 5%
      vertical-align top
    .title
      width 95%
      justify-items center
      text-align center
  .searchStation
    background: rgb(59, 153, 252)
    padding 3px 6px
  .content-wrapper
    position absolute
    top: 78px
    bottom: 0
    width: 100%
    overflow: hidden
    .title
      padding-left: 10px
      height 18px
      line-height: 18px
      font-size 13px
      background rgb(239, 239, 244)
    .show-more
      .station
        padding-left 10px
        height 30px
        line-height: 30px
        font-size 15px
        background rgb(255, 255, 255)
        border-1px(rgba(7, 17, 27, 0.1))
    .show-less
      max-height 300px
      overflow hidden
      .station
        padding-left 10px
        height 30px
        line-height: 30px
        font-size 15px
        background rgb(255, 255, 255)
        border-1px(rgba(7, 17, 27, 0.1))
    .content-more
      display inline-block
      margin: 0 auto;
      text-align: center
      width: 100%
      height 30px
      line-height: 30px
      font-size 10px
      background rgb(255, 255, 255)
      color: rgb(159, 159, 159)
  .stationTitle
    position: fixed
    right: 5px
    top: 50%;
    transform: translateY(-40%)
    z-index: 100
    display: flex;
    justify-content: center;
    align-items: center;
    .text
      display: flex
      align-items center
      justify-content center
      height: 22px
      width: 22px
      line-height: 22px
      font-size: 10px
      color: rgb(59, 153, 252)
      &:last-child
        margin-bottom 0
  .selectStationTitle
    position absolute
    top: 84px
    bottom: 0
    width: 100%
    overflow: hidden
    .station
      padding-left 10px
      height 30px
      line-height: 30px
      font-size 15px
      background rgb(255, 255, 255)
      border-1px(rgba(7, 17, 27, 0.1))
      &:last-child
        border-none()
