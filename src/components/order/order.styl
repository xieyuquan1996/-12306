@import "../../common/stylus/mixin.styl"
.order
  width 100%
  height: 100%
  .head
    position: relative
    width: 100%
    background rgb(59, 153, 252)
    color rgb(255, 255, 255)
    .icon-left,.text,.icon-right
      height 40px
      line-height 40px
      font-size 17px
    .icon-left
      position: absolute;
      left 5px
    .icon-right
      position: absolute;
      right 5px
    .text
      display inline-block
      width 100%
      text-align center
      font-weight 500
  .total-wrapper
    position: absolute;
    top: 70px
    bottom 0px
    width 100%
    background rgb(239, 239, 244)
    z-index: 0
    .ticket-wrapper
      width: 100%
      background rgb(255, 255, 255)
      padding-top 10px
      .ticket-header
        display: flex
        width: 100%
        border-dashed-1px(rgba(7, 17, 27, 0.1))
        .ticket-start,.ticket-end
          display: inline-block
          flex: 1
          text-align center
          .title
            font-size 14px
            margin-bottom: 5px
          .time
            font-size 20px
            margin-bottom 3px
          .showStation
            font-size 10px
            margin-bottom 3px
        .ticket-end
          .time
            .ticket-time
              font-size 10px
              color: rgb(213,75,75)
        .ticket-icon
          display: inline-block
          flex: 1
          text-align center
          padding-left: 5px
          padding-right: 5px
          font-size 10px
          justify-items center
          .background
            width: 100%
            height 6px
            display: block
            z-index -1
          .text
            display: block
            text-align center
      .ticket-bottom
        display: flex
        width: 100%
        margin-bottom 5px
        .selectTicket
          background #3b99fc
          color: rgb(255, 255, 255)
        .ticket-content
          margin-top: 8px
          margin-bottom: 5px
          padding-top: 5px
          flex: 1
          display: inline-block
          text-align center
          border-radius 3px
          .ticket-level
            font-size: 12px
            margin-bottom: 5px
          .ticket-num,.ticket-price
            font-size 10px
            margin-bottom: 3px
          .ticket-price
            color: rgb(200, 200, 200)
    .traveler-wrapper
      width 100%
      background rgb(255, 255, 255)
      .person-wrapper
        display flex
        width: 100%
        height 25px
        line-height: 25px
        border-1px(rgba(7, 17, 27, 0.1))
        .name,.type,.icon
          flex 1
          font-size 13px
        .identity
          flex 3
          font-size 13px
        .name
          padding-left 5px
        .type
          color #3b99fc
        .icon
          color: rgb(157, 157, 157)
      .addPerson
        width 100%
        height 30px
        line-height: 30px
        font-size 16px
        text-align center
        color: rgb(255, 151,46)
        .icon
          vertical-align center
  .placing-order
    width 95%
    margin-top: 10px
    margin-left: 10px
    margin-right: 10px
