@import "../../common/stylus/mixin.styl"
.ticket
  width 100%
  height: 100%
  .head
    position: relative
    width: 100%
    background rgb(59, 153, 252)
    color rgb(255, 255, 255)
    .icon-left,.text,.icon-right
      height 40px
      line-height 40px
      font-size 17px
    .icon-left
      position: absolute;
      left 5px
    .icon-right
      position: absolute;
      right 5px
    .text
      display inline-block
      width 100%
      text-align center
      font-weight 500
  .content-wrapper
    position: absolute;
    width: 100%
    top: 75px
    bottom 40px
    overflow: hidden
    background rgb(239, 239, 244)
    font-size 30px
    z-index: 0
    .content
      position: relative;
      height auto
      background rgb(255, 255, 255)
      margin 5px 0
      .content-top
        top: 10px
        margin-left: 10px
        margin-right: 10px
        position: relative
        display: flex
        border-dashed-1px(rgba(7, 17, 27, 0.1))
        .trip-num
          display: inline-block
          height 40px
          width: 70px
          font-size 17px
          color: rgb(51, 51, 51)
        .ticket-info-start,.ticket-info-end
          display inline-block
          height 40px
          width: 70px
          font-size 12px
          color: #000
          .station-title
            display: inline-block
            font-size 10px
            border-radius 3px
            color: rgb(255, 255, 255)
          .station-name
            display inline-block
          .ticker-time
            display: inline-block
            margin-top: 5px
            font-size 10px
        .ticket-info-end
          position: absolute;
          top: 0
          right: 50px
        .icon
          position: relative;
          height 40px
          width: 80px
          display: block
          font-size 10px
          z-index: 100
          text-align center
          justify-items center
          .background
            position: absolute;
            top: 10px
            left: 0
            z-index 1
          .text
            position: absolute;
            top: 22px
            width: 80px
            text-align center
        .show-info
          position: absolute;
          top: 0
          right: 5px
          height: 40px
          width: 15px
          font-size 15px
          color: rgb(204, 204, 204)
      .content-bottom
        display: block
        margin-top 10px
        margin-left: 10px
        margin-right: 10px
        font-size 10px
        padding-top: 10px
        padding-bottom: 5px
        width: 100%
        color: rgb(52, 52, 52)
        .without-ticket
          color: rgb(201, 201, 201)
        .ticket-info
          display inline-block
          width: 32%
          margin-bottom 4px
          .enough-ticket
            color: rgb(137, 197, 143)
      .start-up
        margin-left: 10px
        height 15px
        line-height: 15px
        font-size: 12px
        color: rgb(255,132,28)
      .stop-through
        width: 100%
        margin 0
        padding: 0
        .title
          display: flex
          margin 0
          padding: 0
          .content
            flex 1
            margin 0
            padding: 0
            height: 16px
            line-height: 16px
            background rgb(187, 187, 187)
            color: rgb(59, 153,252)
            font-size 10px
        .station-title
          display: flex
          margin 0
          padding: 0 5px
          .station-content
            flex 1
            margin 0
            padding: 0
            height: 24px
            line-height: 24px
            font-size 12px
            border-1px(rgba(7, 17, 27, 0.1))
        .highlight
          color: rgb(59, 153,252)
  .bottom-wrapper
    position: fixed;
    bottom 0
    width: 100%
    height: 40px
    .content
      display flex
      height 40px
      .lineHeight
        color: rgb(20, 137, 201)
      .icon
        text-align: center;
        font-size: 18px;
        margin-top: 5px;
      .text
        text-align: center;
        font-size: 12px
  .more-wrapper
    position: absolute
    right: 0
    top: 35px
    height 120px
    width 110px
    border-radius 3px
    box-shadow: 0 0 6px rgb(232, 232, 232)
    background rgb(255, 255, 255)
    .more-content
      height 30px
      line-height: 30px
      font-size 0
      border-1px(rgba(7, 17, 27, 0.1))
      &:last-child
        border-none()
      .text
        font-size 13px
      .icon
        font-size: 15px
        color: rgb(65, 166, 235)
        vertical-align center
        margin-left: 10px
        margin-right: 10px
  .show-ticket-number
    position: absolute
    width 100%
    top: 70px
    text-align center
    height: 16px
    line-height: 16px
    color #000
    background rgba(239, 239, 244, 0.8)
    font-size 10px
